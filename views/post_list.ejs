<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<ol>
    <% postList.results.forEach(function(post) {%>
        <li>
            <%= post.postedBy.username %> posted on : <%= format(post.createdAt, "dd MMM yy") %> <br>
            <img src="<%= post.imageUrl %>" width="200"/> <br>
            <%= post.message %> <br>
            Liked by <%= post.likedBy[0].name %> and <%= (post.likedBy.length - 1)%> others <br>
            Dislikes: <%= post.dislikedBy.length %> <br>
            Post ID: <%= post.id %> <br><br><br>
        </li>
    <% }); %>
</ol>

<%if (postList.next) { %>
    <a href="<%= postList.next %>">Next</a>
<% } %>
<%if (postList.previous) { %>
    <a href="<%= postList.previous %>">Previous</a>
<% } %>

</body>
<%- include('_footer') -%>
</html>