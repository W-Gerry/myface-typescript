<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1 id="post-list-title">Your Feed</h1>
<ol class="post-list">
    <% postList.results.forEach(function(post) {%>
        <li class="profile-post">
            <img class="profile-post-image" src="<%= post.imageUrl %>" />
            <div class="profile-post-text">
                <p class="profile-post-username"><%= post.postedBy.username %></p>
                <p class="profile-post-date"><%= format(post.createdAt, "dd MMM yy") %></p>
                <p class="profile-post-message"><%= post.message %></p>
            </div>
        </li>
    <% }); %>
</ol>

<%if (postList.next) { %>
    <a href="<%= postList.next %>">Next</a>
<% } %>
<%if (postList.previous) { %>
    <a href="<%= postList.previous %>">Previous</a>
<% } %>

</body>
<%- include('_footer') -%>
</html>